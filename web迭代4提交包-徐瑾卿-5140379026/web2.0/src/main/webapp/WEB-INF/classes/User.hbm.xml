<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.module.bean">

    <class name="User" table="user"  catalog="mydb">

        <id name="id" column="id" type="int">
            <generator class="native"></generator>
        </id>

        <property name="username" column="username" type="string"></property>
        <property name="password" column="password" type="string"></property>
        <property name="phone" column="phone" type="string"></property>
        <property name="email" column="email" type="string"></property>
        <property name="roleid" column="roleid" type="int"  ></property>
        <set name="orders" lazy="false" cascade="save-update">

            <key column="username"></key>

            <one-to-many class="Order"/>
        </set>
    </class>

</hibernate-mapping>