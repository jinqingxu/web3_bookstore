<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.module.bean">

    <class name="Comment" table="comment"  catalog="mydb">
        <id name="id" column="id" type="int">
            <generator class="native"></generator>
        </id>
        <property name="username" column="username" type="string"></property>
       <property name="bookname" column="bookname" type="string"></property>
        <property name="content" column="content" type="string"></property>
    </class>

</hibernate-mapping>